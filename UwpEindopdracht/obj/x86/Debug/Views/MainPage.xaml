<Page x:ConnectionId='1'
    x:Class="UwpEindopdracht.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UwpEindopdracht"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:UwpEindopdracht.Models"
    mc:Ignorable="d">
    
    <SplitView x:ConnectionId='2' x:Name="MySplitView" DisplayMode="Overlay" IsPaneOpen="False">
        <SplitView.Pane>
            <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <RelativePanel Background="DeepPink" Grid.Row="0">
                    <Button x:ConnectionId='7' x:Name="MenuButton" 
                            FontFamily="Segoe MDL2 Assets" 
                            Content="&#xE700;" 
                            Height="50px" 
                            Width="50px" 
                                                    
                            Foreground="White" 
                            Background="DeepPink"></Button>
                    <TextBlock RelativePanel.RightOf="MenuButton" 
                               Margin="10, 15" Text="Menu yo" 
                               Foreground="White"/>
                </RelativePanel>
                <StackPanel Orientation="Vertical"
                            Margin="20"
                            Grid.Row="1">
                    <TextBlock Text="Feeds" FontSize="20"></TextBlock>
                    <RadioButton>Algemeen</RadioButton>
                    <RadioButton>Internet</RadioButton>
                    <RadioButton>Sport</RadioButton>
                    <RadioButton>Opmerkelijk</RadioButton>
                    <RadioButton>Games</RadioButton>
                    <RadioButton>Wetenschap</RadioButton>
                </StackPanel>
                <StackPanel x:ConnectionId='3' Grid.Row="2" 
                            Margin="20"
                                                                                                                                          >
                    <TextBlock FontSize="20" Margin="0 10">Log In</TextBlock>
                    <TextBox x:ConnectionId='4' PlaceholderText="Email"
                             Margin="0 10"
                             x:Name="textb_Email"></TextBox>
                    <PasswordBox x:ConnectionId='5' PlaceholderText="Wachtwoord"
                             Margin="0 10"
                             x:Name="textb_Password"></PasswordBox>
                    <StackPanel Orientation="Horizontal">
                        <Button x:ConnectionId='6'                          
                                CommandParameter=""
                            HorizontalAlignment="Left">Log in</Button>
                        <Button Margin="20 0">Registreer</Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </SplitView.Pane>
        <SplitView.Content>
            <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <RelativePanel Background="DeepPink" Grid.Row="0">
                    <Button x:ConnectionId='14' x:Name="OptionsButton" 
                            FontFamily="Segoe MDL2 Assets" 
                            Content="&#xE700;" 
                            Height="50px" 
                            Width="50px" 
                                                    
                            Foreground="White" 
                            Background="DeepPink"></Button>
                    <TextBlock RelativePanel.RightOf="OptionsButton" 
                               Margin="10, 15" Text="Inholland News Reader" 
                               Foreground="White"/>
                </RelativePanel>
                <ListView x:ConnectionId='8' x:Name="ListView" 
                                                                    
                    Grid.Row="1" 
                    IsItemClickEnabled="True"
                                                >
                    <ListView.ItemTemplate>
                        <DataTemplate                            >
                            <StackPanel x:ConnectionId='9' Orientation="Horizontal" Margin="0 0 20 0">
                                <Image x:ConnectionId='10'                         Width="80" Stretch="UniformToFill" HorizontalAlignment="Left"/>
                                <Button x:ConnectionId='11'                         
                                        Visibility="{Binding User.IsLoggedIn, Converter={StaticResource booleanToVisibilityConverter}, Mode=OneWay}">Like</Button>
                                <StackPanel Margin="20" MaxWidth="300">
                                    <TextBlock x:ConnectionId='12'                       
                                       FontWeight="ExtraBold" 
                                       FontSize="20" 
                                       TextWrapping="WrapWholeWords"/>
                                    <TextBlock x:ConnectionId='13'                         
                                       TextWrapping="WrapWholeWords"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </SplitView.Content>
    </SplitView>
    
</Page>

