<Page x:ConnectionId='1'
    x:Class="UwpEindopdracht.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UwpEindopdracht"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:UwpEindopdracht.Models"
    mc:Ignorable="d">

    <SplitView x:ConnectionId='2' x:Name="MySplitView" DisplayMode="Overlay" IsPaneOpen="False">
        <SplitView.Pane>
            <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <RelativePanel Background="DeepPink" Grid.Row="0">
                    <Button x:ConnectionId='3' x:Name="MenuButton" 
                            FontFamily="Segoe MDL2 Assets" 
                            Content="&#xE700;" 
                            Height="50px" 
                            Width="50px" 
                                                    
                            Foreground="White" 
                            Background="DeepPink"></Button>
                </RelativePanel>
            </Grid>
        </SplitView.Pane>
        <SplitView.Content>
            <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <RelativePanel Background="DeepPink" Grid.Row="0">
                    <Button x:ConnectionId='9' x:Name="OptionsButton" 
                            FontFamily="Segoe MDL2 Assets" 
                            Content="&#xE700;" 
                            Height="50px" 
                            Width="50px" 
                                                    
                            Foreground="White" 
                            Background="DeepPink"></Button>
                    <TextBlock RelativePanel.RightOf="OptionsButton" 
                               Margin="10, 15" Text="Inholland News Reader" 
                               Foreground="White"/>
                </RelativePanel>
                <ListView x:ConnectionId='4' x:Name="ListView" 
                                                                    
                    Grid.Row="1" 
                    IsItemClickEnabled="True"
                                                >
                    <ListView.ItemTemplate>
                        <DataTemplate                            >
                            <StackPanel x:ConnectionId='5' Orientation="Horizontal" Margin="0">
                                <Image x:ConnectionId='6'                         Width="200px" Stretch="UniformToFill" HorizontalAlignment="Left"/>
                                <StackPanel Margin="20" MaxWidth="300">
                                    <TextBlock x:ConnectionId='7'                       
                                       FontWeight="ExtraBold" 
                                       FontSize="20" 
                                       TextWrapping="WrapWholeWords"/>
                                    <TextBlock x:ConnectionId='8'                         
                                       TextWrapping="WrapWholeWords"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </SplitView.Content>
    </SplitView>
    
</Page>

