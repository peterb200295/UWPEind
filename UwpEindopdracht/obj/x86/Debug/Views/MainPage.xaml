<Page x:ConnectionId='1'
    x:Class="UwpEindopdracht.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UwpEindopdracht"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:UwpEindopdracht.Models"
    mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <RelativePanel Background="Black">
            <Button x:ConnectionId='7' x:Name="OptionsButton" FontFamily="Segoe MDL2 Assets" Content="&#xE700;" Height="50px" Width="50px" Foreground="White" Background="DarkSlateGray"></Button>
            <TextBlock RelativePanel.RightOf="OptionsButton" Margin="10, 15" Text="Inholland News Reader" Foreground="White"/>
        </RelativePanel>
        <ListView x:ConnectionId='2'                                   >
            <ListView.ItemTemplate>
                <DataTemplate                            >
                    <StackPanel x:ConnectionId='3' Orientation="Horizontal" Margin="0">
                        <Image x:ConnectionId='4'                         Width="200px" Stretch="UniformToFill" HorizontalAlignment="Left"/>
                        <StackPanel Margin="20">
                            <TextBlock x:ConnectionId='5'                       FontWeight="ExtraBold" FontSize="20"></TextBlock>
                            <TextBlock x:ConnectionId='6'                        ></TextBlock>
                        </StackPanel>
                    </StackPanel>
                    
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Page>

