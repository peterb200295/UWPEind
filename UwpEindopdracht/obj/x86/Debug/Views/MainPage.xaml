<Page x:ConnectionId='1'
    x:Class="UwpEindopdracht.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UwpEindopdracht"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:UwpEindopdracht.Models"
    mc:Ignorable="d">

    <SplitView x:ConnectionId='2' x:Name="MySplitView" DisplayMode="Overlay" IsPaneOpen="False">
        <SplitView.Pane>
            <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <RelativePanel Background="DeepPink" Grid.Row="0">
                    <Button x:ConnectionId='10' x:Name="MenuButton" 
                            FontFamily="Segoe MDL2 Assets" 
                            Content="&#xE700;" 
                            Height="50px" 
                            Width="50px" 
                                                    
                            Foreground="White" 
                            Background="DeepPink"/>
                    <TextBlock RelativePanel.RightOf="MenuButton" 
                               Margin="10, 15" Text="Menu" 
                               Foreground="White"/>


                </RelativePanel>
                <Button x:ConnectionId='3'                            
                            RelativePanel.RightOf="OptionsButton"
                            HorizontalAlignment="Right"
                            Height="50px"
                            Foreground="Black"
                        Content="Ververs overzicht"
                            FontSize="15"
                            Background="white"
                        Grid.Row="1"/>

                <StackPanel Orientation="Vertical"
                            Margin="20"
                            Visibility="Collapsed"
                            Grid.Row="1">
                    <TextBlock Text="Feeds" FontSize="20"/>
                    <RadioButton Content="Algemeen"/>
                    <RadioButton Content="Internet"/>
                    <RadioButton Content="Sport"/>
                    <RadioButton Content="Opmerkelijk"/>
                    <RadioButton Content="Games"/>
                    <RadioButton Content="Wetenschap"/>
                </StackPanel>
                <StackPanel x:ConnectionId='4' Grid.Row="2" 
                            Margin="20"
                                                                                                                                          >
                    <TextBlock FontSize="20" Margin="0 10">
                        <Run Text="Log In"/>
                    </TextBlock>
                    <TextBox x:ConnectionId='6' PlaceholderText="Gebruikersnaam"
                             Margin="0 10"
                             x:Name="textb_Email"/>
                    <PasswordBox x:ConnectionId='7' PlaceholderText="Wachtwoord"
                             Margin="0 10"
                             x:Name="textb_Password"/>
                    <StackPanel Orientation="Horizontal">
                        <Button x:ConnectionId='8'                          
                            HorizontalAlignment="Left" Content="Log in"/>
                        <Button x:ConnectionId='9' Margin="20 0" 
                                                            
                                HorizontalAlignment="Right"
                                Content="Registreer"/>
                    </StackPanel>
                </StackPanel>
                <Button x:ConnectionId='5' Grid.Row="2"
                        Margin="20"
                                                                                                                                              
                                                   Content="Uitloggen"/>
            </Grid>
        </SplitView.Pane>
        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <RelativePanel Background="DeepPink" Grid.Row="0">
                <Button x:ConnectionId='17' x:Name="OptionsButton" 
                            FontFamily="Segoe MDL2 Assets" 
                            Content="&#xE700;" 
                            Height="50px" 
                            Width="50px" 
                                                    
                            Foreground="White" 
                            Background="DeepPink"/>
                <TextBlock RelativePanel.RightOf="OptionsButton" 
                               Margin="10, 15" Text="Inholland News Reader" 
                               Foreground="White"/>
                
            </RelativePanel>
            <ListView x:ConnectionId='11' x:Name="ListView" 
                                                                    
                    Grid.Row="1" 
                    IsItemClickEnabled="True"
                                                >
                <ListView.ItemTemplate>
                    <DataTemplate                            >
                        <Grid x:ConnectionId='12'>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="4*"/>
                            </Grid.ColumnDefinitions>
                            <RelativePanel Margin="0 0 0 0"
                                           Grid.Column="0">
                                <Image x:ConnectionId='15' x:Name="ListImage" 
                                                                   
                                           MaxWidth="200"
                                           Stretch="UniformToFill"
                                           MinHeight="60"
                                           MaxHeight="200"/>
                                <Button x:ConnectionId='16'                         
                                                                                                                                      
                                        RelativePanel.AlignBottomWithPanel="True"
                                        RelativePanel.AlignRightWith="ListImage"
                                                                                                                                                       Content="Like"/>
                            </RelativePanel>
                            <StackPanel Margin="20" 
                                            Grid.Column="1"
                                            >
                                <TextBlock x:ConnectionId='13'                       
                                       FontWeight="ExtraBold" 
                                       FontSize="20" 
                                       TextWrapping="WrapWholeWords"/>
                                <TextBlock x:ConnectionId='14'                         
                                       TextWrapping="WrapWholeWords"/>
                            </StackPanel>
                        </Grid>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </SplitView>

</Page>

