<Page x:ConnectionId='1'
    x:Class="UwpEindopdracht.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UwpEindopdracht"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:UwpEindopdracht.Models"
    mc:Ignorable="d">
    
    <SplitView x:ConnectionId='2' x:Name="MySplitView" DisplayMode="Overlay" IsPaneOpen="False">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='3' x:Name="LayoutStates">
                <VisualState x:ConnectionId='4' x:Name="PortraitState"/>
                <VisualState x:ConnectionId='5' x:Name="LandscapeState"/>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <SplitView.Pane>
            <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <RelativePanel Background="DeepPink" Grid.Row="0">
                    <Button x:ConnectionId='11' x:Name="MenuButton" 
                            FontFamily="Segoe MDL2 Assets" 
                            Content="&#xE700;" 
                            Height="50px" 
                            Width="50px" 
                                                    
                            Foreground="White" 
                            Background="DeepPink"></Button>
                    <TextBlock RelativePanel.RightOf="MenuButton" 
                               Margin="10, 15" Text="Menu yo" 
                               Foreground="White"/>
                    

                </RelativePanel>
                <StackPanel Orientation="Vertical"
                            Margin="20"
                            Visibility="Collapsed"
                            Grid.Row="1">
                    <TextBlock Text="Feeds" FontSize="20"></TextBlock>
                    <RadioButton>Algemeen</RadioButton>
                    <RadioButton>Internet</RadioButton>
                    <RadioButton>Sport</RadioButton>
                    <RadioButton>Opmerkelijk</RadioButton>
                    <RadioButton>Games</RadioButton>
                    <RadioButton>Wetenschap</RadioButton>
                </StackPanel>
                <StackPanel x:ConnectionId='6' Grid.Row="2" 
                            Margin="20"
                                                                                                                                          >
                    <TextBlock FontSize="20" Margin="0 10">Log In</TextBlock>
                    <TextBox x:ConnectionId='8' PlaceholderText="Gebruikersnaam"
                             Margin="0 10"
                             x:Name="textb_Email"></TextBox>
                    <PasswordBox x:ConnectionId='9' PlaceholderText="Wachtwoord"
                             Margin="0 10"
                             x:Name="textb_Password"></PasswordBox>
                    <StackPanel Orientation="Horizontal">
                        <Button x:ConnectionId='10'                          
                                CommandParameter=""
                            HorizontalAlignment="Left">Log in</Button>
                        <Button Margin="20 0" 
                                Visibility="Collapsed">Registreer</Button>
                    </StackPanel>
                </StackPanel>
                <Button x:ConnectionId='7' Grid.Row="2"
                        Margin="20"
                        Visibility="Visible"
                                                  >Uitloggen</Button>
            </Grid>
        </SplitView.Pane>
        <SplitView.Content>
            <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <RelativePanel Background="DeepPink" Grid.Row="0">
                    <Button x:ConnectionId='18' x:Name="OptionsButton" 
                            FontFamily="Segoe MDL2 Assets" 
                            Content="&#xE700;" 
                            Height="50px" 
                            Width="50px" 
                                                    
                            Foreground="White" 
                            Background="DeepPink"></Button>
                    <TextBlock RelativePanel.RightOf="OptionsButton" 
                               Margin="10, 15" Text="Inholland News Reader" 
                               Foreground="White"/>
                    <Button x:ConnectionId='19'                            
                            RelativePanel.RightOf="OptionsButton"
                            HorizontalAlignment="Right"
                            Margin="250 0 0 0"
                            Height="50px"
                            Width="80px"
                            Foreground="White"
                            FontSize="30"
                            Content="*"
                            Background="DeepPink">
                    </Button>
                </RelativePanel>
                <ListView x:ConnectionId='12' x:Name="ListView" 
                                                                    
                    Grid.Row="1" 
                    IsItemClickEnabled="True"
                                                >
                    <ListView.ItemTemplate>
                        <DataTemplate                            >
                            <Grid x:ConnectionId='13'>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"></ColumnDefinition>
                                    <ColumnDefinition Width="4*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <RelativePanel Margin="0 0 0 0"
                                           Grid.Column="0">
                                    <Image x:ConnectionId='16' x:Name="ListImage" 
                                                                   
                                           MaxWidth="200"
                                           Stretch="UniformToFill"
                                           MinHeight="60"
                                           MaxHeight="200"/>
                                    <Button x:ConnectionId='17'                         
                                        RelativePanel.AlignBottomWithPanel="True"
                                        RelativePanel.AlignRightWith="ListImage"
                                                                                                                                                      >Like</Button>
                                </RelativePanel>
                                <StackPanel Margin="20" 
                                            Grid.Column="1"
                                            >
                                    <TextBlock x:ConnectionId='14'                       
                                       FontWeight="ExtraBold" 
                                       FontSize="20" 
                                       TextWrapping="WrapWholeWords"/>
                                    <TextBlock x:ConnectionId='15'                         
                                       TextWrapping="WrapWholeWords"/>
                                </StackPanel>
                            </Grid>
                            
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </SplitView.Content>
    </SplitView>
    
</Page>

